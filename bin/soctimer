#!/bin/bash

TEST=$(sudo screen -list | grep -wc soctimer)

if [ "$TEST" = "1" ]; then

  echo "Waiting 20..."
  sleep 10
  echo "Waiting 10..."
  sleep 10

  TEST=$(sudo screen -list | grep -wc minew)

  until [ $TEST = 1 ]
  do
  TEST=$(sudo screen -list | grep -wc minew)
  echo "Waiting miner to reclock.. (VEGA)"
  sleep 1
  done
  # Miner up and running
  echo "Miner started, wait 10 sec then apply clocks"
  sleep 10
  sudo bash /home/minerstat/minerstat-os/bin/overclock.sh
else
  exit 0
fi
